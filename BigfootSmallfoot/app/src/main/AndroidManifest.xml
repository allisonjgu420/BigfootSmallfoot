<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.allison.bigfootsmallfoot">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-library android:name="com.google.android.maps" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Dashboard" />
        <activity android:name=".VehicleActivity" />
        <activity android:name=".SetGoals" />
        <activity android:name=".LocationFinder"/>

        <activity
            android:name=".TransportationInput"
            android:label="@string/title_activity_transportation_input"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".rv_item"
            android:label="@string/title_activity_rv_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInput"
            android:label="@string/title_activity_user_input"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DrawView" />
        <activity android:name=".Graph" />
        <activity android:name=".Graphs" />
        <activity android:name=".CreateAccount"></activity>
    </application>
</manifest>

